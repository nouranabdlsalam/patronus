<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#282F41"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:background="@drawable/bubble_bg">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:src="@drawable/back"
            android:scaleType="fitCenter"
            android:background="@color/blue"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:contentDescription="Back Button" />

        <TextView
            android:id="@+id/network_center_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Network Center"
            android:textSize="30sp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="45dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:gravity="center"
            android:shadowColor="@color/light_navy"
            android:shadowRadius="6"
            android:shadowDy="7"/>

    </LinearLayout>
    <ImageButton
        android:id="@+id/network_scan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/scan_btn"
        android:background="@color/navy"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:contentDescription="Scan Button" />

    <RadioGroup
        android:id="@+id/scan_mode_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="12dp">

        <RadioButton
            android:id="@+id/rb_basic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="General Info"
            android:textColor="#FFFFFF"
            android:buttonTint="#FFFFFF" />

        <RadioButton
            android:id="@+id/rb_advanced"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Speed Test"
            android:textColor="#FFFFFF"
            android:buttonTint="#FFFFFF"
            android:layout_marginStart="16dp" />

        <RadioButton
            android:id="@+id/rb_troubleshoot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Troubleshoot"
            android:textColor="#FFFFFF"
            android:buttonTint="#FFFFFF"
            android:layout_marginStart="16dp" />
    </RadioGroup>




    <!-- Troubleshoot Tools Section (Initially hidden) -->
    <LinearLayout
        android:id="@+id/troubleshoot_tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="12dp"
        android:visibility="gone">

        <Button
            android:id="@+id/btn_ping"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ping Test"
            android:layout_marginEnd="16dp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#3F51B5"/>

        <Button
            android:id="@+id/btn_traceroute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Traceroute"
            android:textColor="#FFFFFF"
            android:backgroundTint="#3F51B5"/>
    </LinearLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Navigation Bar -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/navigationBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#D3D3D3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:id="@+id/nav_home"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintEnd_toStartOf="@id/nav_scan"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="MissingConstraints">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/home" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Home"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/nav_scan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintEnd_toStartOf="@id/nav_settings"
                app:layout_constraintStart_toEndOf="@id/nav_home"
                tools:ignore="MissingConstraints">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/scan" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Scan"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/nav_settings"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintEnd_toStartOf="@id/nav_help"
                app:layout_constraintStart_toEndOf="@id/nav_scan"
                tools:ignore="MissingConstraints">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/settings" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Settings"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/nav_help"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/nav_settings"
                tools:ignore="MissingConstraints">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/help" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Help"
                    android:textSize="20sp" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>
