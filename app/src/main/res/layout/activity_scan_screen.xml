<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TrustedNetworksActivity"
    android:background="@color/navy">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:background="@drawable/bubble_bg">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back"
            android:scaleType="centerCrop"
            android:background="@color/blue"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            />

        <TextView
            android:id="@+id/trusted_networks_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/scan"
            android:textSize="30sp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="45dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:gravity="center"
            android:shadowColor="@color/light_navy"
            android:shadowRadius="6"
            android:shadowDy="7"/>

    </LinearLayout>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/scan_btn"
        android:background="@color/navy"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"/>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/all_apps_radio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/all_apps"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:buttonTint="@color/white"
            android:checked="true"/>

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/installed_apps_radio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/select_apps"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:textStyle="bold"/>

    </RadioGroup>

</LinearLayout>